<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del platillo:"
            android:textSize="24sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtPlatillo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa el nombre"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio del platillo:"
            android:textSize="24sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtPrecioPlatillo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa el precio"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo del platillo:"
            android:textSize="24sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtCodigoPlatillo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa el codigo"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</RelativeLayout>