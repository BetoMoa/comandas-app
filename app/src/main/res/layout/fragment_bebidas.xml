<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bebidas.bebidasFragment">

    <LinearLayout
        android:id="@+id/fila_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/edtBuscarBebida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnAgregar_bebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar bebida"
                android:background="#74737c"
                android:textColor="#fff"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fila2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fila_1"
        android:padding="10dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_bebidas"/>

    </LinearLayout>

</RelativeLayout>